<!doctype html>

<head>
  <meta charset="utf-8">

  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Playing</title>
  <link rel="stylesheet" type="text/css" media="screen" href="../css/main.css">  
  <link rel="stylesheet" type="text/css" media="screen" href="../css/game.css">
  <link rel="stylesheet" type="text/css" media="screen" href="../css/animacion-plato.css">
  <script src="../js/jquery-3.3.1.min.js"></script>
  <script src="../js/vendor/modernizr-2.8.3-respond-1.4.2.min.js"></script>
  <script src="../js/main.js"></script>
  <script src="../js/gifler.min.js"></script>
</head>

<body>

  <div id="tiempos" style="display: none;">
    <%=tiempos%>
  </div>
 

  <div class="container">

    <audio id="player" src="../media/countdown.mp3" type="audio/mpeg" autoplay preload="auto"></audio>
    <audio id="myAudio" src="../media/<%=song.Cancion%>" type="audio/mpeg"></audio>
    <img id="cenefa1" class="cenefa" src="../img/Cenefa22.png">
    <div id="showrachas1" class="showrachas">
      <div class="centerPoints">
        <div class="titlePoints">
          Puntos:
        </div>
        <div id="tag1">
          
        </div>
        <div id="puntos-p1">0</div>
      </div>
      <div class="spanRacha">
        <span class="nameRacha">Racha:</span>
        <img id="number2" src="../img/2.gif" style="display: none">
        <img id="number3" src="../img/3.gif" style="display: none">
        <img id="number4" src="../img/4.gif" style="display: none">
        <img id="max" src="../img/max.gif" style="display: none">
      </div>      
    </div>

    <!--<img id="cenefa1" class="cenefa" src="../img/Cenefa22.png">-->
    <div id="bg-player1">
      <div id="info">
        <canvas id="gifCanvas1"></canvas>
      </div>
      <canvas id="bg_canvas_1"></canvas>
      <canvas id="canvas-1"></canvas>
      <div class="animation">
        <div class="format-animation" id="six">6</div>
        <div class="format-animation" id="five" style="display: none">5</div>
        <div class="format-animation" id="four">4</div>
        <div class="format-animation" id="three" style="display: none">3</div>
        <div class="format-animation" id="two">2</div>
        <div class="format-animation" id="one" style="display: none">1</div>
      </div>
      <!--  Aqui terminan los divs-->

    </div>
    <img id="cenefa2" class="cenefa2" style="display: none" src="../img/Cenefa22.png">
    <div class="showrachas" id="rachasMulti" style="visibility: hidden;">
      <div class="centerPoints2">
        <div class="titlePoints">
          Puntos:
        </div>
        <div id="tag2">
          
        </div>
        <div id="puntos-p2">0</div>
      </div>
      <div class="spanRacha">
        <span class="nameRacha2">Racha:</span>
        <img id="number22" src="../img/2.gif" style="display: none">
        <img id="number32" src="../img/3.gif" style="display: none">
        <img id="number42" src="../img/4.gif" style="display: none">
        <img id="max2" src="../img/max.gif" style="display: none">
      </div>
    </div>
    <div id="bg-player2" style="visibility: hidden;">
      <div id="info">
        <canvas id="gifCanvas2"></canvas>
      </div>
      <canvas id="bg_canvas_2"></canvas>
      <canvas id="canvas-2"></canvas>
      <div id="animation2" class="animation">
        <div class="format-animation" id="six2">6</div>
        <div class="format-animation" id="five2" style="display: none">5</div>
        <div class="format-animation" id="four2">4</div>
        <div class="format-animation" id="three2" style="display: none">3</div>
        <div class="format-animation" id="two2">2</div>
        <div class="format-animation" id="one2" style="display: none">1</div>
      </div>
      <!--  Aqui terminan los divs-->
    </div>

    <form name="submitScore" action="/score" method="post">
      <input type="hidden" name="idcancion" value="<%= song._id %>">
      <input type="hidden" name="iddificultad" value="<%= difid %>">
      <input type="hidden" id="usePoints" name="points" value=''>
      <input type="hidden" id="usePoints2" name="points2" value=''>
      <input type="hidden" name="user" value="<%=userid%>">
      <input type="hidden" name="nick" value="<%=nick%>">
      <input type="hidden" id="img" name="img" value="<%=usrImg%>">
      <input type="hidden" id="imgMulti" name="imgMulti" value="<%=usrMulti%>">
      <input type="hidden" name="imagen" value="<%=song.Imagen%>"">
      <input type="hidden" id="multi" name="multi" value=''>
    </form>
    
  </div>
</body>

</html>